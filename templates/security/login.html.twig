{% extends 'base.html.twig' %}

{% block body %}
    <div class="base">

        <!-- Page -->
        <div class="page">

            <!-- Page Header-->
            <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="white-text">registration</h2>
                            <span class="white-text">Welcome on board</span>
                            <ol class="breadcrumb">
                                <li><a href="#!">Home</a></li>
                                <li class="active">registration</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Page Content-->
            <section class="section-padding gray-bg log-section">
                <div class="container">
                    <div class="row">

                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <div class="card card-panel">
                                <h3 class="text-extrabold">Log in to your account</h3>
                                <form id="registration-form" action="{{ path('security_login') }}" method="post" data-parsley-validate>
                                    <div class="form-group">
                                        <input placeholder="Adresse email..." type="text" name="_username" class="form-control" required
                                               autofocus
                                               data-parsley-trigger="change"
                                               data-parsley-error-message="A valid email address is required.">
                                    </div>
                                    <div class="form-group">
                                        <input placeholder="Mot de Passe..." type="text" name="_password" class="form-control" required
                                               data-parsley-trigger="change"
                                               data-parsley-error-message="The password must be at least 6 characters.">
                                    </div>
                                    <div class="checkbox">
                                        <input type="checkbox" id="keep-logged" name="remember" value="1" />
                                        <label for="keep-logged">Keep me logged in</label>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-lg gradient secondary btn-block waves-effect waves-light mt-20 mb-20">registration</button>
                                    </div>
                                    <div class="links">
                                        <a href="#!">Forgot your password?</a>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-8">
                            <div class="card card-panel ptb-70 text-center">
                                <div class="promo-info">
                                    <h1 class="text-uppercase mb-30 text-extrabold font-30">New to Luxury Services ?</h1>
                                    <p class="width-60 mb-30">Joining us is allowing our recruitment expertise and personal guidance to bring the best out in you by choosing the most suited position.</p>
                                    <a href="{{ path('security_registration')}}" class="btn btn-lg gradient secondary waves-effect waves-light mt-20"><span>Sign-up<strong> Free</strong></span></a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}